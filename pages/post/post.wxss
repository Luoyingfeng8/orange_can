/* pages/post/post.wxss */

swiper{
  width: 100%;
  height: 600rpx;
}

swiper image{
  width: 100%;
  height: 100%;
}

.post-container{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  margin: 20rpx 0 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}

/* 整体的移动最好直接在对容器进行操作 */

.post-author-data{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  margin: 10rpx 0 20rpx 10px;
}

.post-author-data image{
  width: 60rpx;
  height: 60rpx;
}

.post-author-data text{
  margin-left: 40rpx;
}

.post-like{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  font-size: 13px;
  line-height: 16px;
  margin-left: 10px;
}

.post-like image{
  height: 35rpx;
  width: 35rpx;
  margin-left: 20rpx;
}

.post-title{
  font-size: 16px;
  font-weight: 600;
  color: #333;
  margin-left: 10px;
  margin-bottom: 10px;
}

